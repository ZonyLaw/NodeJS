    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if(orders.length <=0) { %>

                    <h1>No orders!</h1>
                    <% } else { %>
                        <ul>
                            <% orders.forEach(order=> {%>

                                <h1>
                                    #<%= order._id %>
                                </h1>

                                <% order.products.forEach (p=>{ %>
                                    <li>
                                        <%= p.product.title %> (<%= p.quantity %>)
                                    </li>
                                    <% }); %>

                                        <%});%>

                        </ul>

                        <% } %>





            </main>



            <%- include('../includes/end.ejs') %>